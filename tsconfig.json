{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "lib": ["dom", "es2015"],
    "moduleResolution": "node",
    "jsx": "react",
    "outDir": "dist",
    "strict": true,
    "sourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,

    "skipLibCheck": true,
    "declarationMap": true,
    "declaration": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["dist"]
}
